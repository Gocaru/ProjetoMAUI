<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiJogoForca.MainPage">

    <Grid RowDefinitions=".6*, .4*" RowSpacing="20">

        <VerticalStackLayout Spacing="10">

            <Label 
                FontAttributes="Bold"
                FontSize="20"
                TextColor="Red"
                HorizontalOptions="Center"
                Text="{Binding StatusJogo}" />

            <Image HeightRequest="220" 
                   Source="{Binding ImagemAtual}" />

            <Label 
                FontSize="30"
                HorizontalOptions="Center"
                Text="{Binding Destaque}"
                VerticalOptions="Center" />

            <Label 
                FontSize="20"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                BackgroundColor="Coral"
                Text="{Binding Mensagem}" />

            <Button
                HorizontalOptions="Center"
                Text="Resetar"
                TextColor="White"
                FontSize="Medium"
                FontAttributes="Bold"
                WidthRequest="100"
                BackgroundColor="DarkSeaGreen"
                Clicked="Reset_Clicked" />

        </VerticalStackLayout>

        <FlexLayout
            x:Name="LetrasContainer"
            Grid.Row="1"
            BindableLayout.ItemsSource="{Binding Letras}"
            JustifyContent="SpaceEvenly"
            Wrap="Wrap">

            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button
                        HeightRequest="50"
                        WidthRequest="50"
                        Text="{Binding .}"
                        FontAttributes="Bold"
                        BackgroundColor="Coral"
                        Clicked="Button_Clicked"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>


    </Grid>

</ContentPage>
